{
   "openapi":"3.0.1",
   "info":{
      "title":"OpenAPI definition",
      "version":"v0"
   },
   "servers":[
      {
         "url":"http://localhost:9020",
         "description":"Generated server url"
      }
   ],
   "paths":{
      "/api/v1/products/{id}":{
         "get":{
            "tags":[
               "product-rest"
            ],
            "summary":"Get a product by ID",
            "description":"Allows retrieving a product using its unique ID",
            "operationId":"getProductById",
            "parameters":[
               {
                  "name":"id",
                  "in":"path",
                  "required":true,
                  "schema":{
                     "type":"integer",
                     "format":"int64"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"Product found",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/ReadProductDTO"
                        }
                     }
                  }
               },
               "404":{
                  "description":"Product not found",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/ReadProductDTO"
                        }
                     }
                  }
               }
            }
         },
         "put":{
            "tags":[
               "product-rest"
            ],
            "summary":"Update a product",
            "description":"Allows updating an existing product",
            "operationId":"updateProduct",
            "parameters":[
               {
                  "name":"id",
                  "in":"path",
                  "required":true,
                  "schema":{
                     "type":"integer",
                     "format":"int64"
                  }
               }
            ],
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/UpdateProductDTO"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "204":{
                  "description":"Product updated successfully"
               },
               "404":{
                  "description":"Product not found"
               }
            }
         },
         "delete":{
            "tags":[
               "product-rest"
            ],
            "summary":"Delete a product",
            "description":"Allows deleting a product from the system",
            "operationId":"deleteProduct",
            "parameters":[
               {
                  "name":"id",
                  "in":"path",
                  "required":true,
                  "schema":{
                     "type":"integer",
                     "format":"int64"
                  }
               }
            ],
            "responses":{
               "204":{
                  "description":"Product deleted successfully"
               },
               "404":{
                  "description":"Product not found"
               }
            }
         }
      },
      "/api/v1/products":{
         "get":{
            "tags":[
               "product-rest"
            ],
            "summary":"Get all products",
            "description":"Returns a list of all products",
            "operationId":"getAllProducts",
            "responses":{
               "200":{
                  "description":"Products retrieved successfully",
                  "content":{
                     "*/*":{
                        "schema":{
                           "type":"array",
                           "items":{
                              "$ref":"#/components/schemas/ReadProductDTO"
                           }
                        }
                     }
                  }
               }
            }
         },
         "post":{
            "tags":[
               "product-rest"
            ],
            "summary":"Create a new product",
            "description":"Allows creating a product in the system",
            "operationId":"createProduct",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/CreateProductDTO"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "201":{
                  "description":"Product created successfully",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/ReadProductDTO"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Invalid request",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/ReadProductDTO"
                        }
                     }
                  }
               }
            }
         }
      }
   },
   "components":{
      "schemas":{
         "UpdateProductDTO":{
            "required":[
               "brand",
               "category",
               "description",
               "imageUrl",
               "name",
               "price",
               "quantity",
               "status"
            ],
            "type":"object",
            "properties":{
               "name":{
                  "maxLength":100,
                  "minLength":3,
                  "type":"string"
               },
               "description":{
                  "maxLength":500,
                  "minLength":0,
                  "type":"string"
               },
               "price":{
                  "minimum":0.01,
                  "exclusiveMinimum":false,
                  "type":"number"
               },
               "quantity":{
                  "type":"integer",
                  "format":"int32"
               },
               "category":{
                  "maxLength":100,
                  "minLength":0,
                  "type":"string"
               },
               "imageUrl":{
                  "maxLength":255,
                  "minLength":0,
                  "type":"string"
               },
               "brand":{
                  "maxLength":100,
                  "minLength":0,
                  "type":"string"
               },
               "status":{
                  "type":"string",
                  "enum":[
                     "inactivo",
                     "activo",
                     "agotado"
                  ]
               }
            }
         },
         "CreateProductDTO":{
            "required":[
               "category",
               "description",
               "imageUrl",
               "name",
               "status"
            ],
            "type":"object",
            "properties":{
               "name":{
                  "maxLength":100,
                  "minLength":2,
                  "type":"string"
               },
               "description":{
                  "maxLength":500,
                  "minLength":5,
                  "type":"string"
               },
               "price":{
                  "minimum":0.01,
                  "exclusiveMinimum":false,
                  "type":"number"
               },
               "quantity":{
                  "type":"integer",
                  "format":"int32"
               },
               "category":{
                  "type":"string"
               },
               "imageUrl":{
                  "type":"string"
               },
               "brand":{
                  "maxLength":100,
                  "minLength":0,
                  "type":"string"
               },
               "status":{
                  "type":"string",
                  "enum":[
                     "inactivo",
                     "activo",
                     "agotado"
                  ]
               }
            }
         },
         "ReadProductDTO":{
            "type":"object",
            "properties":{
               "id":{
                  "type":"integer",
                  "format":"int64"
               },
               "name":{
                  "type":"string"
               },
               "description":{
                  "type":"string"
               },
               "price":{
                  "type":"number"
               },
               "quantity":{
                  "type":"integer",
                  "format":"int32"
               },
               "category":{
                  "type":"string"
               },
               "imageUrl":{
                  "type":"string"
               },
               "status":{
                  "type":"string"
               }
            }
         }
      }
   }
}